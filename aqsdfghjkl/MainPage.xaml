<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aqsdfghjkl.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            x:Name="VSL">
            <Rectangle
                WidthRequest="200"
                HeightRequest="200"
                x:Name="Rect"
                Stroke="white" />
            <Label
                x:Name="RGBLBL"
                Text="#000"
                HorizontalTextAlignment="Center"/>
            <Label
                Text="0, 0, 0"
                x:Name="LBL"
                HorizontalTextAlignment="Center"/>
            <Slider
                x:Name="Red"
                Minimum="0" 
                Maximum="255"
                ValueChanged="Blue_ValueChanged"
                ThumbColor="Red"
                MinimumTrackColor="Red"
                MaximumTrackColor="Grey"/>
            <Slider
                x:Name="Green"
                Minimum="0" 
                Maximum="255"
                ValueChanged="Blue_ValueChanged"
                ThumbColor="Green"
                MinimumTrackColor="Green"
                MaximumTrackColor="Grey"/>
            <Slider
                x:Name="Blue"
                Minimum="0" 
                Maximum="255"
                ValueChanged="Blue_ValueChanged"
                ThumbColor="Blue"
                MinimumTrackColor="Blue"
                MaximumTrackColor="Grey"
                />
            <Button
                WidthRequest="200"
                HeightRequest="100"
                x:Name="BTN"
                TextColor="Grey"
                BorderColor="White"
                Clicked="BTN_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>